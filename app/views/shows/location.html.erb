<div class="row">
  <h1 class="page-title">Listening to artists playing in <%= @show.city %></h1>

  <script type="text/javascript">
	  var artistVideoIDs = <%= @videos.to_json.html_safe %>;
  </script>

  <div class="radio">
	<div class="col-md-8">
	  <%= render 'partials/youtube_player' %>
	</div>
	<div class="col-md-4 right-sidebar">
	  <div class="artist-details">
		<p>Currently Playing</p>

		<h1><%= @show.artist_name %></h1>

		<p>Playing at <%= @show.name %></p>

		<p><%= @show.date %></p>

		<p>
		  <%= @favorite.show_button.html_safe %>
		  <%= @thumbs_down.show_button.html_safe %>
		</p>
		<p><a href="<%= @show.url %>" class="btn btn-default" target="_blank">Buy Tickets</a></p>
		<p>
		  <%= @report.show_button.html_safe %>
		</p>
	  </div>
	  <div class="skip-artist">
		<%= @link_to_next_show %>
	  </div>
	</div>
  </div>


</div>
